{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "target": "ES2016",
    "sourceMap": true,
    "inlineSources": false,
    "outDir": "./dist",
    "incremental": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "plugins": [
      {
        "type": "raw"
      }
    ],
    "moduleResolution": "node",
    "paths": {
      "common/*": ["src/common/*"],
      "modules/*": ["src/modules/*"],
      "shared/*": ["src/shared/*"],
      "services/*": ["src/shared/services/*"],
      "models/*": ["src/shared/models/*"],
      "components/*": ["src/shared/components/*"],
      "pages/*": ["pages/*"],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "cypress"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}